  build-depends:
    , ghc              ^>=9.2
    , ghc-paths        ^>=0.1.0.12
    , haddock-library  ^>=2.27
    , hspec            ^>=2.10
    , parsec           ^>=3.1.13.0
    , QuickCheck       ^>=2.14
    , xhtml            ^>=3000.2.2

  -- Versions for the dependencies below are transitively pinned by
  -- the non-reinstallable `ghc` package and hence need no version
  -- bounds
  build-depends:
    , array
    , base
    , bytestring
    , containers
    , deepseq
    , directory
    , exceptions
    , filepath
    , ghc-boot
    , ghc-boot-th
    , mtl
    , transformers

  build-tool-depends: hspec-discover:hspec-discover ^>=2.10

